<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>
    <style name="fade" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/out_alpha</item>
        <item name="android:activityOpenExitAnimation">@anim/enter_alpha</item>
        <item name="android:activityCloseEnterAnimation">@anim/out_alpha</item>
        <item name="android:activityCloseExitAnimation">@anim/enter_alpha</item>
    </style>
</resources>
