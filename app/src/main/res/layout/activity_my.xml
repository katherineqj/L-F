<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#f7f7f7"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:textSize="17dp"
        android:textColor="#ffffff"
        android:background="@color/blue_one"
        android:text="我"/>
    <LinearLayout
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:id="@+id/Linear_login"
        android:background="@drawable/edittext_style"
        android:visibility="visible"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="100dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="8">
            <TextView
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="0.5"/>
            <com.example.katherine_qj.lostandfound.Model.RoundImageView
                android:id="@+id/my_icon"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@mipmap/head_one"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="0.5"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="9"
                android:layout_height="80dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/my_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="请登录"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#dedddd"/>
                <TextView
                    android:id="@+id/my_introduce"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="查看或编辑个人资料"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/mylogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:visibility="visible"
                android:layout_centerVertical="true"
                android:background="@mipmap/login_open_two"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="0.5"/>
        </LinearLayout>


    </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:background="@drawable/edittext_style"
        android:visibility="visible"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_height="100dp">
        <TextView
            android:padding="10dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:text="已发表"
            android:textColorHint="@color/blue_one"
            android:textColor="#4388af"
            android:textStyle="bold"/>
        <TextView
            android:background="#e2e2e2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textStyle="bold"/>
        <TextView
            android:padding="10dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:text="已找回"
            android:textColorHint="@color/blue_one"
            android:textColor="#4388af"
            android:textStyle="bold"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="70dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/my_ButtonLogout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="log out"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:background="@drawable/sign_seletor_pressed"
            android:layout_weight="2"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    </LinearLayout>

</LinearLayout>
